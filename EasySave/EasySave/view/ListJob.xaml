                    </TransformGroup>
                </Image.RenderTransform>
            </Image>
        </Button>
        <Label x:Name="Label_IndexPages" Content="XX / XX" HorizontalContentAlignment="Center" HorizontalAlignment="Center" Height="24" Margin="0,628,0,0" VerticalAlignment="Top" Width="132" FontFamily="Arial" FontSize="14"/>
